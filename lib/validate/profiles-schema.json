{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "$ref": "#/definitions/id"
      },
      "title": {
        "type": "string"
      },
      "description": {
        "type": "object",
        "propertyNames": {
          "pattern": "^[a-z]{2,}$"
        }
      },
      "url": {
        "$ref": "#/definitions/url"
      },
      "checks": {
        "type": "array"
      }
    },
    "required": ["id"],
    "additionalProperties": false
  },
  "definitions": {
    "id": {
      "type": "string"
    },
    "url": {
      "type": "string",
      "format": "uri",
      "pattern": "^https?://"
    }
  }
}
